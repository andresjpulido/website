---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />

    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="A seasoned software developer with over a decade of experience in the world of coding. I'm deeply passionate about technology and consider myself a lifelong learner, always eager to explore new horizons in the ever-evolving tech landscape."
    />
    <meta property="og:title" content="Andres Pulido - Software developer" />
    <meta
      property="og:description"
      content="A seasoned software developer with over a decade of experience in the world of coding. I'm deeply passionate about technology and consider myself a lifelong learner, always eager to explore new horizons in the ever-evolving tech landscape."
    />
    <meta property="og:image" content="favicon.ico" />
    <meta property="og:image:alt" content="Andres Pulido logo-icon" />
    <meta name="theme-color" content="var(--primary-color)" />
    <link rel="icon" href="favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="f">
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: Helvetica, system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  h1,
  h2,
  h3,
  h4,
  p,
  ul:not([data-attr="nav"]),
  
  img,
  form {
    animation: fade linear both;
    animation-timeline: view();
    animation-range: entry 50% cover 50%;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media screen and (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
