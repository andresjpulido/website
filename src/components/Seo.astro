---
import siteData from "../data/siteData.json";
import jsonLDGenerator from "../js/jsonLD";

const {
  title,
  description,
  url = Astro.url,
  image,
  frontmatter,
  robots,
  domain,
} = Astro.props;

const jsonLD = jsonLDGenerator({
  type: frontmatter ? "post" : "website",
  post: frontmatter,
  url,
});
---

<meta name="description" content={description} />

<!-- SEO -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:site_name" content={title} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={image || siteData.image.src} />
<meta property="og:image:url" content={image || siteData.image.src} />
<meta property="og:image:secure_url" content={image || siteData.image.src} />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="247" />
<meta property="og:image:height" content="247" />
<meta property="og:image:alt" content={title || siteData.image.alt} />

<!-- Twitter -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={image || siteData.image.src} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:domain" content={domain} />

{robots && <meta name="robots" content="noindex, nofollow" />}

<!-- JSON LD -->
<Fragment set:html={jsonLD} />
